generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Url {
  id        String   @id @default(cuid())
  url       String
  nanoId    String
  status    String
  isCopied  Boolean
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  survey    Survey?

  @@index([nanoId], type: Hash)
}

model Survey {
  id            String   @id @default(cuid())
  gender        String
  age           String
  location      String
  mushroom_exp  String
  is_blockchain Boolean
  account       String   @unique
  computer_exp  String
  crypto_exp    String
  nft_exp       String
  createdAt     DateTime @default(now()) @map("created_at")
  url           Url      @relation(fields: [urlId], references: [id])
  urlId         String   @unique
}

model Totals {
  id    String @id @default(cuid())
  type  String @unique
  total Int
}
